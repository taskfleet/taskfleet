{
  //-----------------------------------------------------------------------------------------------
  // GOLANG
  //-----------------------------------------------------------------------------------------------
  "go.testEnvVars": {
    "KAFKA_BOOTSTRAP_SERVER": "localhost:9092"
  },
  "go.testEnvFile": "${workspaceRoot}/.env",
  // "go.testTags": "integration",
  "go.testTimeout": "600s",
  "gopls": {
    "build.buildFlags": ["-tags", "integration"]
  },
  //-----------------------------------------------------------------------------------------------
  // PROTOC
  //-----------------------------------------------------------------------------------------------
  "protoc": {
    "options": ["--proto_path=${workspaceRoot}/grpc/schema"]
  },
  //-----------------------------------------------------------------------------------------------
  // PRETTIER
  //-----------------------------------------------------------------------------------------------
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
